<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".Detail">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewCircleWithStrokesecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/room2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.AllCornerRadius" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/curvy_button"
            app:backgroundTint="#fff"
            app:icon="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:iconGravity="textEnd"
            app:iconSize="20dp"
            app:iconTint="#000"
            android:layout_alignParentLeft="true"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/like_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/curvy_button"
            app:backgroundTint="#fff"
            app:icon="@drawable/baseline_favorite_black_24dp"
            app:iconGravity="textEnd"
            app:iconSize="25dp"
            app:iconTint="#FF0000"
            android:layout_toLeftOf="@id/back_button"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Central Edmon"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp"
            android:textFontWeight="500"
            android:textColor="#000"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="4.8"
            android:background="@drawable/curvy_button_rating"
            android:backgroundTint="#6082E6"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp"
            android:textFontWeight="500"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="#fff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t155 ratings"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp"
            android:textFontWeight="500"
            android:textColor="#000"
            />

    </LinearLayout>
    <TextView
        android:text="118 Street, West Edmonton, Alberta"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-thin"
        android:textSize="19dp"
        android:textFontWeight="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_bed_black_36dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="\t2 Beds"
            android:fontFamily="sans-serif-thin"
            android:textSize="18dp"
            android:textFontWeight="400"
            />
        <Space
            android:layout_width="9dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_bathroom_black_36dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="\t2 Beds"
            android:fontFamily="sans-serif-thin"
            android:textSize="18dp"
            android:textFontWeight="400"
            />

        <Space
            android:layout_width="9dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_aspect_ratio_black_36dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="\t2 Beds"
            android:fontFamily="sans-serif-thin"
            android:textSize="18dp"
            android:textFontWeight="400"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This building is located in the Oliver area,\nwithin walking distance of shopes..."
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-thin"
        android:textSize="19dp"
        android:textFontWeight="400"
        />
    
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/interior1"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.AllCornerRadius"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/interior2"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.AllCornerRadius"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/interior3"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.AllCornerRadius"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curvy_button"
        android:backgroundTint="#DCDCDC"
        >

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15,00,00"
                android:fontFamily="sans-serif-thin"
                android:textSize="20dp"
                android:textFontWeight="500"
                android:textColor="#6082E6"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="Total Price"
                android:textFontWeight="400"
                android:textSize="19dp" />

        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/book_now"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:background="@drawable/curvy_button"
            android:text="Book Now"
            android:textColor="#fff"
            android:backgroundTint="#000"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="18dp"
            android:textFontWeight="500"

            />

    </LinearLayout>

</LinearLayout>

</ScrollView>

